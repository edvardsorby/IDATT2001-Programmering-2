<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idatt2001.edvarso.controller.ApplicationViewController">
   <center>
      <HBox alignment="CENTER" prefHeight="300.0" prefWidth="750.0" spacing="10.0">
         <ImageView fx:id="card1" fitHeight="175.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="card2" fitHeight="175.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="card3" fitHeight="175.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="card4" fitHeight="175.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="card5" fitHeight="175.0" pickOnBounds="true" preserveRatio="true" />
      </HBox>
   </center>
   <top>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" prefWidth="750.0" text="Card game" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial Black" size="35.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <VBox prefWidth="750.0" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER" spacing="10.0">
            <VBox.margin>
               <Insets/>
            </VBox.margin>
            <padding>
               <Insets bottom="25.0"/>
            </padding>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sum of the faces:">
               <font>
                  <Font size="14.0"/>
               </font>
            </Text>
            <TextField fx:id="sumOfFacesText" alignment="CENTER" editable="false" prefHeight="25.0" prefWidth="35.0">
               <font>
                  <Font size="14.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT"/>
               </cursor>
            </TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cards of hearts:">
               <font>
                  <Font size="14.0"/>
               </font>
            </Text>
            <TextField fx:id="cardsOfHeartsText" editable="false" prefHeight="25.0" prefWidth="155.0">
               <font>
                  <Font size="14.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT"/>
               </cursor>
            </TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Has Queen of spades:">
               <font>
                  <Font size="14.0"/>
               </font>
            </Text>
            <TextField fx:id="queenOfSpadesText" alignment="CENTER" editable="false" prefHeight="25.0" prefWidth="40.0">
               <font>
                  <Font size="14.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT"/>
               </cursor>
            </TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Is flush:">
               <font>
                  <Font size="14.0"/>
               </font>
            </Text>
            <TextField fx:id="flushText" alignment="CENTER" editable="false" prefHeight="25.0" prefWidth="40.0">
               <font>
                  <Font size="14.0"/>
               </font>
               <cursor>
                  <Cursor fx:constant="DEFAULT"/>
               </cursor>
            </TextField>
         </HBox>
         <HBox alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#dealHandClicked" prefHeight="50.0" prefWidth="200.0"
                    text="Deal hand">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <HBox.margin>
                  <Insets right="25.0"/>
               </HBox.margin>
               <font>
                  <Font name="Arial" size="22.0"/>
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#checkHandClicked" prefHeight="50.0" prefWidth="200.0"
                    text="Check hand">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <HBox.margin>
                  <Insets left="25.0"/>
               </HBox.margin>
               <font>
                  <Font name="Arial" size="22.0"/>
               </font>
            </Button>
         </HBox>
      </VBox>
   </bottom>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="15.0" />
   </padding>
</BorderPane>
